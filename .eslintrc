{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "amd": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "$": true,
        "process": true,
        "__dirname": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module",
        "ecmaVersion": 7
    },
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "rules": {
        "indent": 0,
        "linebreak-style": 0,
        "quotes": 0,
        "no-extra-semi": 0,
        "no-unused-expressions": 0,
        "no-unused-vars": 0,
        "no-console": 0,
        "no-mixed-spaces-and-tabs": 0,
        "no-cond-assign": 0,
        "seImmediate": "none"
    }
}